# Production Environment Variables
# Copy this file to .env.prod and fill in the actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL + pgvector)
# =============================================================================
POSTGRES_HOST=your-postgres-host.digitalocean.com
POSTGRES_PORT=25060
POSTGRES_USER=your-db-user
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=intelligent_document_search
POSTGRES_SSL_MODE=require

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_DSN=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password

# =============================================================================
# OPENAI API
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# AWS S3 CONFIGURATION
# =============================================================================
AWS_ACCESS_KEY=your-aws-access-key
AWS_SECRET_KEY=your-aws-secret-key
S3_BUCKET=your-production-bucket
S3_REGION=us-east-1
S3_TEMP_PREFIX=temp/

# =============================================================================
# REDIS QUEUE SETTINGS
# =============================================================================
DOCUMENT_PROCESSING_QUEUE_NAME=document_processing
CLEANUP_TASKS_QUEUE_NAME=cleanup_tasks
DOCUMENT_PROCESSING_JOB_TIMEOUT_SECONDS=1800
CLEANUP_TASKS_JOB_TIMEOUT_SECONDS=300
REDIS_JOB_RESULT_TTL_SECONDS=86400
REDIS_JOB_RETRY_INTERVAL_SECONDS=60

# =============================================================================
# DOCUMENT PROCESSING SETTINGS
# =============================================================================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
USE_CONTEXTUAL_RETRIEVAL=true
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=pdf,doc,docx

# =============================================================================
# CLEANUP SETTINGS
# =============================================================================
CLEANUP_ORPHANED_FILES_HOURS=24
S3_LIFECYCLE_DAYS=7

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY=your-super-secret-key-for-jwt
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# =============================================================================
# MONITORING & PERFORMANCE
# =============================================================================
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=30
WORKER_CONCURRENCY=2
ENABLE_METRICS=true

# =============================================================================
# DOCKER REGISTRY (for CI/CD)
# =============================================================================
DOCKER_REGISTRY=your-registry.com
TAG=latest
